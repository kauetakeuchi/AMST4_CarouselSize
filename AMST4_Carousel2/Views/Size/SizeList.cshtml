@model IEnumerable<AMST4_Carousel2.Models.Size>

@{
    ViewData["Title"] = "Lista Size";
}

<h1>lista Size</h1>

<p>
    <a asp-action="AddSize">Nova Size</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                    <a asp-action="SizeEdit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="SizeDetails" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="SizeDelete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
